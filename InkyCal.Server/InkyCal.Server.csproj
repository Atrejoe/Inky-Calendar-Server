<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Features>flow-analysis</Features>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <NoWarn />
    <UserSecretsId>ef330956-86ef-4986-bab6-740de0fbd262</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Controllers\GoogleController.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\changelog.md" Link="changelog.md">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bugsnag" Version="2.2.3" />
    <PackageReference Include="Bugsnag.AspNet.Core" Version="2.2.3" />
    <PackageReference Include="ceTe.DynamicPDF.Rasterizer.NET.x64" Version="3.2.0.38353" />
